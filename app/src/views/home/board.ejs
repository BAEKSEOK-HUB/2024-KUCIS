<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>글 작성</title>
    <style>
        /* 기본 스타일 설정 */
        body {
            font-family: 'Noto Sans KR', sans-serif;
            background-color: #333;
            margin: 0;
            padding: 0;
            color: #fff;
        }

        /* 헤더 스타일 */
        .header {
            width: 100%;
            background-color: #333;
            padding: 10px 0;
            text-align: left;
        }

        /* 로고 스타일 */
        .header a.logo {
            font-size: 30px;
            color: #ffcc00;
            font-weight: bold;
            text-decoration: none;
            padding-left: 20px;
        }

        /* 구분선 스타일 */
        .separator {
            border-top: 2px solid #ffcc00;
            margin-bottom: 20px;
        }

        /* 폼 컨테이너 스타일 */
        .container {
            width: 80%;
            max-width: 900px;
            margin: 0 auto;
            background-color: #444;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        /* 제목 스타일 */
        .form-title {
            font-size: 24px;
            font-weight: bold;
            color: #ffcc00;
            margin-bottom: 20px;
        }

        /* 폼 필드 스타일 */
        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-size: 18px;
            color: #ffcc00;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #555;
            background-color: #555;
            color: #fff;
            font-size: 16px;
            margin-top: 5px;
            resize: none;
        }

        /* 버튼 스타일 */
        .form-actions {
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

        .form-actions button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 10px;
        }

        .button-submit {
            background-color: #ffcc00;
            color: #333;
        }

        .button-cancel {
            background-color: #999;
            color: #fff;
        }

        button:hover {
            opacity: 0.9;
        }

        input[type="text"]:focus,
        textarea:focus {
            border-color: #ffcc00;
            outline: none;
        }
    </style>
</head>
<body>

    <!-- 헤더: NGDB 로고 -->
    <div class="header">
        <a href="/login" class="logo">NGDB</a>
    </div>

    <!-- 구분선 -->
    <div class="separator"></div>

    <!-- 게시글 작성 폼 컨테이너 -->
    <div class="container">
        <div class="form-title">글 작성</div>

        <!-- 제목 입력 필드 -->
        <div class="form-group">
            <label for="title">글 제목</label>
            <input type="text" id="title" placeholder="글 제목을 입력하세요.">
        </div>

        <!-- 내용 입력 필드 -->
        <div class="form-group">
            <label for="content">내용</label>
            <textarea id="content" rows="10" placeholder="내용을 입력하세요."></textarea>
        </div>

        <!-- 작성 및 취소 버튼 -->
        <div class="form-actions">
            <button class="button-submit" onclick="submitPost()">작성</button> <!-- 게시글 작성 버튼 -->
            <button class="button-cancel" onclick="cancelForm()">취소</button> <!-- 작성 취소 버튼 -->
        </div>
    </div>

    <script>
        // 취소 버튼 클릭 시 동작
        function cancelForm() {
            if (confirm("글 작성을 취소하시겠습니까?")) { // 취소 확인 팝업
                window.location.href = "/community";  // 글 목록 페이지로 이동
            }
        }

        // 작성 버튼 클릭 시 동작
        function submitPost() {
            const title = document.getElementById("title").value; // 제목 필드 값 가져오기
            const content = document.getElementById("content").value; // 내용 필드 값 가져오기

            if (!title || !content) { // 제목과 내용이 비어있는지 확인
                alert("제목과 내용을 모두 입력해주세요."); // 경고 메시지
                return;
            }

            // 서버에 게시글 데이터 전송
            fetch('/board/write', {
                method: 'POST', // HTTP POST 메서드 사용
                headers: {
                    'Content-Type': 'application/json', // JSON 형식으로 데이터 전송
                },
                body: JSON.stringify({ title, content }), // 데이터 직렬화하여 전송
            })
            .then(response => response.json()) // 서버 응답을 JSON으로 변환
            .then(data => {
                if (data.success) { // 성공 시
                    alert("게시글이 작성되었습니다."); // 성공 메시지
                    window.location.href = '/community';  // 글 목록 페이지로 이동
                } else {
                    alert("게시글 작성에 실패했습니다."); // 실패 시 메시지
                }
            })
            .catch(err => console.error(err)); // 에러 발생 시 콘솔에 출력
        }
    </script>

</body>
</html>
