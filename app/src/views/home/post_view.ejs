<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>게시글 보기</title>
    <style>
      /* 전체 바디 스타일 */
      body {
        font-family: "Noto Sans KR", sans-serif;
        background-color: #333;
        margin: 0;
        padding: 0;
        color: #fff;
      }

      /* 헤더 스타일 */
      .header {
        width: 100%;
        background-color: #333;
        padding: 10px 0;
        text-align: left;
      }

      /* 헤더 로고 스타일 */
      .header a.logo {
        font-size: 30px;
        color: #ffcc00;
        font-weight: bold;
        text-decoration: none;
        padding-left: 20px;
      }

      /* 구분선 스타일 */
      .separator {
        border-top: 2px solid #ffcc00;
        margin-bottom: 20px;
      }

      /* 게시글 컨테이너 스타일 */
      .container {
        width: 80%;
        max-width: 900px;
        margin: 0 auto;
        background-color: #444;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        position: relative;
      }

      /* 게시글 제목 및 메타 스타일 */
      .post-header {
        margin-bottom: 20px;
      }

      .post-title {
        font-size: 28px;
        font-weight: bold;
        color: #ffcc00;
      }

      .post-meta {
        font-size: 14px;
        color: #999;
      }

      /* 게시글 내용 스타일 */
      .post-content {
        font-size: 18px;
        color: #ddd;
        margin-top: 20px;
        line-height: 1.6;
      }

      /* 버튼 스타일 */
      .form-actions {
        margin-top: 20px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
      }

      button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 10px;
      }

      .button-scrap {
        background-color: #ffcc00;
        color: #333;
        font-weight: bold;
      }

      .button-list {
        background-color: #999;
        color: #fff;
      }

      .button-delete {
        background-color: #ff4444;
        color: #fff;
        font-weight: bold;
      }

      button:hover {
        opacity: 0.9;
      }

      /* 댓글 섹션 스타일 */
      .comment-section {
        margin-top: 30px;
        padding: 20px;
        background-color: #2e2e2e;
        border-radius: 10px;
      }

      /* 댓글 리스트 스타일 */
      .comment-list {
        list-style: none;
        padding-left: 0;
      }

      .comment-list li {
        margin-bottom: 15px;
        padding: 10px 15px;
        background-color: #444;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      }

      /* 댓글 메타 정보 */
      .comment-list li .comment-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
        font-size: 12px;
        color: #ccc;
      }

      .comment-list li .comment-content {
        font-size: 14px;
        color: #ddd;
        line-height: 1.6;
      }

      /* 대댓글 스타일 */
      .comment-list li.reply {
        margin-left: 10px;
        list-style: none;
        background-color: #555;
        border-radius: 10px;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      }

      .comment-section textarea {
        width: 97%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #888;
        background-color: #444;
        color: #fff;
        font-size: 16px;
        margin-top: 10px;
        margin-bottom: 10px;
        resize: none;
      }

      /* 댓글 버튼 스타일 */
      .comment-section button {
        padding: 4px 10px;
        background-color: #ffcc00;
        color: #333;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
        margin-bottom: 10px;
        margin-left: -5px;
        transition: background-color 0.3s ease;
      }

      input[type="text"]:focus,
      textarea:focus {
        border-color: #ffcc00;
        outline: none;
      }

      .comment-section button:hover {
        background-color: #e6b800;
      }
    </style>
    <!-- HTML 캡처를 위한 외부 라이브러리 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
  </head>
  <body>
    <!-- 헤더 섹션 -->
    <div class="header">
      <a href="/login" class="logo">NGDB</a>
    </div>

    <!-- 구분선 -->
    <div class="separator"></div>

    <!-- 게시글 컨테이너 -->
    <div class="container">
      <div class="post-header">
        <!-- 게시글 제목 -->
        <div class="post-title" id="postTitle"><%= post.title %></div>
        <!-- 게시글 메타 정보 (작성자와 시간) -->
        <div class="post-meta">
          <%= post.id %> | <%= new Date(post.created_at).toLocaleString() %>
        </div>
      </div>

      <!-- 게시글 내용 -->
      <div class="post-content" id="postContent"><%= post.content %></div>

      <!-- 액션 버튼 섹션 -->
      <div class="form-actions">
        <button
          onclick="sendMessage('<%= post.postnum %>', '<%= post.writer_id %>')"
          class="button-scrap"
        >
          쪽지
        </button>
        <button class="button-list" onclick="location.href='/community'">
          글 목록
        </button>
        <button
          class="button-delete"
          onclick="deletePost('<%= post.postnum %>')"
        >
          삭제
        </button>
      </div>

      <!-- 댓글 섹션 -->
      <div class="comment-section">
        <h3>댓글</h3>
        <ul id="commentList" class="comment-list">
          <% if (parentComments && parentComments.length > 0) { %> <% parentComments.forEach(function(comment) { %>
          <li class="comment">
            <!-- 댓글 메타 정보 -->
            <div class="comment-meta">
              <strong><%= comment.user_id %></strong>
              <span><%= new Date(comment.date).toLocaleString() %></span>
            </div>
            <!-- 댓글 내용 -->
            <div class="comment-content"><%= comment.comment %></div>
            <!-- 대댓글 버튼 -->
            <button onclick="showReplyForm('<%= comment.commentsID %>')">
              대댓글
            </button>
            <!-- 대댓글 입력 폼 -->
            <form
              id="replyForm_<%= comment.commentsID %>"
              class="reply-form"
              action="/post/<%= post.postnum %>/comment"
              method="post"
              style="display: none"
            >
              <input
                type="hidden"
                name="parent_id"
                value="<%= comment.commentsID %>"
              />
              <textarea
                name="comment"
                placeholder="대댓글을 입력하세요..."
                required
              ></textarea>
              <button type="submit">대댓글 작성</button>
            </form>
            <ul>
              <% replies.forEach(function(reply) { %> <% if (reply.parent_id ==
              comment.commentsID) { %>
              <li class="reply">
                <!-- 대댓글 작성자와 시간 -->
                <div class="comment-meta">
                  <strong><%= reply.user_id %></strong>
                  <span><%= new Date(reply.date).toLocaleString() %></span>
                </div>
                <!-- 대댓글 내용 -->
                <div class="comment-content"><%= reply.comment %></div>
              </li>
              <% } %> <% }) %>
            </ul>
          </li>
          <% }) %> <% } else { %>
          <li>댓글이 없습니다.</li>
          <% } %>
        </ul>

        <!-- 일반 댓글 작성 폼 -->
        <form action="/post/<%= post.postnum %>/comment" method="post">
          <input type="hidden" name="parent_id" value="0" />
          <textarea
            name="comment"
            placeholder="댓글을 입력하세요..."
            required
          ></textarea>
          <button type="submit">댓글 작성</button>
        </form>
      </div>

      <script>
        // 대댓글 입력 폼 표시 함수
        function showReplyForm(commentID) {
          var form = document.getElementById("replyForm_" + commentID);
          if (form.style.display === "none" || form.style.display === "") {
            form.style.display = "block";
          } else {
            form.style.display = "none";
          }
        }

        // 게시글 삭제 함수
        function deletePost(postId) {
          if (confirm("정말로 이 게시글을 삭제하시겠습니까?")) {
            fetch(`/delete-post/${postId}`, {
              method: "DELETE",
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  alert("게시글이 삭제되었습니다.");
                  window.location.href = "/community";
                } else {
                  alert("게시글 삭제에 실패했습니다.");
                }
              })
              .catch((err) => {
                console.error(err);
                alert("서버 오류가 발생했습니다.");
              });
          }
        }

        // 쪽지 보내기 함수
        function sendMessage(postnum, reciver_id) {
          const sender_id = getCookie("userid");
          if (!sender_id) {
            alert("로그인이 필요합니다.");
            return;
          }
          location.href = `/message_list?postnum=${postnum}&reciver_id=${reciver_id}&sender_id=${sender_id}`;
        }

        // 쿠키 값 가져오는 함수
        function getCookie(name) {
          const value = `; ${document.cookie}`;
          const parts = value.split(`; ${name}=`);
          if (parts.length === 2) return parts.pop().split(";").shift();
        }
      </script>
    </div>
  </body>
</html>
